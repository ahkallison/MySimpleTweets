<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context="com.codepath.apps.restclienttemplate.ComposeActivity">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/etTweet"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfile"
        android:inputType="textMultiLine"
        android:maxLength="140"
        android:hint="What's happening?"></EditText>

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="140"
        android:layout_alignBaseline="@+id/post_btn"
        android:layout_alignBottom="@+id/post_btn" />

    <Button
        android:id="@+id/post_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:onClick="onSubmit"
        android:text="Tweet"
        android:minHeight="25dp"
        android:minWidth="65dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_below="@+id/etTweet"
        android:layout_alignParentEnd="true"
        android:state_pressed="true"/>

</RelativeLayout>
