<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/item_background">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        app:srcCompat="@android:color/black" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ll_title"
    android:layout_alignTop="@+id/ivProfileImage"
    android:layout_toEndOf="@+id/ivProfileImage">

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvUserName" />

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvScreenName" />
</LinearLayout>

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ll_title"
        android:layout_below="@+id/ll_title"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:text="TextView"
        android:linksClickable="true"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/ivMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBody"
        android:layout_alignStart="@+id/tvBody"
        android:adjustViewBounds="true"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_btns"
        android:layout_below="@+id/ivMedia"
        android:layout_alignStart="@+id/tvBody"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp">

        <ImageButton
            android:id="@+id/btnReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_chat_bubble_outline_black_24dp"
            android:tint="@color/btn_disabled"/>

        <TextView
            android:id="@+id/tvReplies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="35dp"
            android:layout_toRightOf="@+id/btnReply"
            android:text="TV" />

        <ImageButton
            android:id="@+id/btnRetweeted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvReplies"
            android:background="@drawable/ic_vector_retweet_stroke"
            android:tint="@color/btn_disabled"/>

        <TextView
            android:id="@+id/tvRetweets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="35dp"
            android:layout_toRightOf="@+id/btnRetweeted"
            android:text="TV" />

        <ImageButton
            android:id="@+id/btnFavorited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvRetweets"
            android:background="@drawable/ic_vector_heart_stroke"
            android:tint="@color/btn_disabled"/>

        <TextView
            android:id="@+id/tvLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="35dp"
            android:layout_toRightOf="@+id/btnFavorited"
            android:text="TV" />

        <ImageButton
            android:id="@+id/btnDM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_vector_messages_stroke"
            android:layout_toRightOf="@+id/tvLikes"
            android:tint="@color/btn_disabled"/>
    </LinearLayout>

    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll_btns"
        android:background="@color/medium_gray_50"/>

</RelativeLayout>